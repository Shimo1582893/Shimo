#include <iostream>
#include <string>
using namespace std;

class Solution {
public:
	int romanToInt(string s) {
		int num = 0;
		int temp;
		char rome;

		for (int i = 0; i < s.size(); ++i)
		{
			rome = s[i];
			temp = i + 1;
			switch(rome){
                case'M':
					num += 1000;
					break;

				case'D':
					num += 500;
					break;

				case'C':
					if (temp < s.size() && (s[temp] == 'D' || s[temp] == 'M'))
						num -= 100;
					else
						num += 100;
					break;

				case'L':
					num += 50;
					break;

				case'X':
					if (temp < s.size() && (s[temp] == 'L' || s[temp] == 'C'))
						num -= 10;
					else
						num += 10;
					break;

				case'V':
					num += 5;
					break;

				case'I':
					if (temp < s.size() && (s[temp] == 'V' || s[temp] == 'X'))
						num -= 1;
					else
						num += 1;
					break;
			}
		}
		return num;
	}
};
